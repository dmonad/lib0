{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["ESNext", "dom"],
    "noEmit": true,
    "module": "nodenext",
    "allowJs": true,
    "checkJs": true,
    "outDir": "./types",
    "baseUrl": "./src",
    "rootDir": "./src",
    "strict": true,
    "noImplicitAny": true,
    "moduleResolution": "nodenext",
    "paths": {
      "lib0/*": ["./src/*"],
      "lib0/webcrypto": ["./src/webcrypto.js"],
      "lib0/performance": ["./src/performance.node.js"],
      "lib0/logging": ["./src/logging.node.js"]
    }
  },
  "include": ["./src/**/*.js"]
}
