{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["dom", "ES2022"],
    "module": "nodenext",
    "allowJs": true,
    "checkJs": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "rootDir": "./",
    "emitDeclarationOnly": true,
    "strict": true,
    "noImplicitAny": true,
    "moduleResolution": "nodenext",
    "paths": {
      "lib0/*": ["./*"],
      "lib0/webcrypto": ["./webcrypto.js"],
      "lib0/performance": ["./performance.node.js"],
      "lib0/logging": ["./logging.node.js"]
    }
  },
  "include": ["./*.js", "./diff/*.js", "./hash/*.js", "./crypto/*.js", "./bin/*.js"],
  "exclude": ["./dist/**/*"]
}
